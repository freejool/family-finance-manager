<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeMinTextSize="10sp"
            android:background="@color/common_alert"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="新增支出"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:autoSizeTextType="uniform" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_s"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_label_width"
                    android:padding="@dimen/padding_s"
                    android:text="金额："
                    android:textSize="@dimen/text_s" />

                <EditText
                    android:id="@+id/txtMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_box_width"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/padding_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_label_width"
                    android:padding="@dimen/padding_s"
                    android:text="时间："
                    android:textSize="@dimen/text_s" />

                <EditText
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_box_width"
                    android:hint="2022-01-01"
                    android:inputType="datetime"
                    android:padding="@dimen/padding_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_label_width"
                    android:padding="@dimen/padding_s"
                    android:text="类别："
                    android:textSize="@dimen/text_s" />

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="@dimen/input_box_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:entries="@array/outtype"
                    android:padding="@dimen/padding_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_label_width"
                    android:padding="@dimen/padding_s"
                    android:text="地点："
                    android:textSize="@dimen/text_s" />

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_box_width"
                    android:padding="@dimen/padding_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_label_width"
                    android:padding="@dimen/padding_s"
                    android:text="备注："
                    android:textSize="@dimen/text_s" />

                <EditText
                    android:id="@+id/txtMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:width="@dimen/input_box_width"
                    android:gravity="top"
                    android:padding="@dimen/padding_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_s"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:padding="@dimen/padding_s"
                    android:text="取消" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:padding="@dimen/padding_s"
                    android:text="保存" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>