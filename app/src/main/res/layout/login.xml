<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33FFCC"
    android:gravity="center"
    android:padding="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/appName"
        android:textSize="28pt" />
    <!-- 添加“请输入密码”文本框 TextView-->
    <EditText
        android:id="@+id/login_user_id"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/login_title"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textColor="#8C6931"
        android:textSize="16pt" />
    <!-- 添加输入密码的编辑框EditText -->
    <EditText
        android:id="@+id/login_passwd"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/login_user_id"
        android:layout_marginTop="8dp"
        android:hint="@string/input_your_password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="16pt" />
    <!-- 添加“取消”按钮 -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_passwd"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="#33CCCC	"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/cancel"
        android:textSize="16pt" />
    <!-- 添加“登录”按钮 -->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_passwd"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/btnClose"

        android:backgroundTint="#33CCCC	"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/enter"
        android:textSize="16pt" />
</RelativeLayout>
