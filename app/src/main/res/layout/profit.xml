<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_s">

        <TextView
            android:id="@+id/origin_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_s"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_s"
            android:text="origin"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s" />

        <TextView
            android:id="@+id/bonus_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_s"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_s"
            android:text="bonus"
            android:textColor="@color/white"

            android:textSize="@dimen/text_s" />

        <TextView
            android:id="@+id/duration_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_s"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_s"
            android:text="duration"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s" />
    </LinearLayout>

    <ListView
        android:id="@+id/profit_info_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_s" />

    <Button
        android:id="@+id/investment_advice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_s"
        android:text="@string/investment_advice" />


</LinearLayout>