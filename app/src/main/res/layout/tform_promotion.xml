<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:background="@color/common_alert"
        android:gravity="center_horizontal"
        android:paddingVertical="5dp"
        android:text="@string/tform_title"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trans_in_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@color/transaction_in_bk"
            android:text="+"
            android:textColor="@color/transaction_in_char" />

        <Button
            android:id="@+id/trans_out_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@color/transaction_out_bk"
            android:text="-"
            android:textColor="@color/transaction_out_char" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/padding_s"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_type_label"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:text="@string/tform_dest"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/income_type_spinner"
            android:layout_width="0dp"
            android:layout_height="48dp"


            android:layout_marginEnd="20dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/padding_s"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_in_money_label"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:text="@string/trans_add_money_title"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/income_money_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/trans_add_money_hint"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:minHeight="48dp"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tform_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预览文本"
        android:textColor="@color/stressed_text"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tform_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="警告文本"
        android:textColor="@color/common_alert"
        android:textSize="34sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/margin_s"
            android:gravity="end"
            android:padding="@dimen/padding_s">


            <Button
                android:id="@+id/income_cancel_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:padding="@dimen/padding_s"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/income_save_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:padding="@dimen/padding_s"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>